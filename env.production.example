# Production Environment Variables
# Copy this file and rename to .env for production use
# NEVER commit the actual .env file to git!

# Database
DATABASE_URL=postgresql://username:password@host.neon.tech/equipment_tracker?sslmode=require

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# AI Service
ANTHROPIC_API_KEY=sk-ant-your-actual-api-key-here

# CORS Origins (comma-separated, no spaces)
CORS_ORIGINS=https://your-office-dashboard.vercel.app,https://your-driver-app.vercel.app

# Upload Settings
ALLOWED_UPLOAD_SIZE=10485760
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Environment
ENVIRONMENT=production
DEBUG=false

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=https://your-sentry-dsn-here

# Email (for notifications - optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@your-domain.com

# Storage (if using cloud storage)
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# S3_BUCKET_NAME=your-bucket-name

# Or Cloudinary
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# Monitoring
# VERCEL_ANALYTICS_ID=your-analytics-id
# LOGTAIL_TOKEN=your-logtail-token


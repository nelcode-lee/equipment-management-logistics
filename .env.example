# =============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Debug mode (True for development, False for production)
DEBUG=True

# Server configuration
HOST=0.0.0.0
PORT=8000

# Application name and version
APP_NAME=Equipment Management Logistics
APP_VERSION=1.0.0

# =============================================================================
# EQUIPMENT MANAGEMENT SETTINGS
# =============================================================================
# Default threshold for equipment alerts
DEFAULT_THRESHOLD=20

# High priority multiplier for urgent alerts
HIGH_PRIORITY_MULTIPLIER=1.5

# Equipment types (comma-separated)
EQUIPMENT_TYPES=Euro Pallet,Half Pallet,Blue Cage,Red Cage,Green Cage,White Cage

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Secret key for JWT tokens (generate a secure random string)
SECRET_KEY=your_secret_key_here

# JWT token expiration (in hours)
JWT_EXPIRATION_HOURS=24

# CORS origins (comma-separated URLs)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/equipment_tracker.log

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=True

# Email addresses
ADMIN_EMAIL=admin@yourcompany.com
SUPPORT_EMAIL=support@yourcompany.com

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
# Maximum file size for uploads (in MB)
MAX_FILE_SIZE_MB=10

# Allowed file extensions for photo uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# Upload directory
UPLOAD_DIR=uploads

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================
# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Google Analytics ID
GOOGLE_ANALYTICS_ID=your_ga_id_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable hot reload for development
HOT_RELOAD=True

# Enable API documentation
ENABLE_DOCS=True

# Test database URL (for running tests)
TEST_DATABASE_URL=sqlite:///./test_equipment_tracker.db

# =============================================================================
# PRODUCTION SETTINGS (Override for production)
# =============================================================================
# Uncomment and configure for production deployment
# DEBUG=False
# HOST=0.0.0.0
# PORT=8000
# LOG_LEVEL=WARNING
# HOT_RELOAD=False
